<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">@dimen/_16sdp</item>
        <item name="android:layout_marginTop">@dimen/_8sdp</item>
        <item name="boxStrokeColor">@color/main_color</item>
        <item name="cursorColor">@color/main_color</item>
        <item name="hintTextColor">@color/main_color</item>
    </style>


    <style name="Colored_checkBox">
        <item name="colorAccent">#f02</item>
        <item name="android:textColorSecondary">@color/gray_200</item>
    </style>

    <style name="RatingBar" parent="Widget.AppCompat.RatingBar">
        <item name="android:progressDrawable">@drawable/ratingbar_filled_empty</item>
        <item name="android:minHeight">@dimen/_16sdp</item>
        <item name="android:maxHeight">@dimen/_48sdp</item>
        <item name="marginHorizontal">@dimen/_16sdp</item>
        <item name="android:layout_marginHorizontal">@dimen/_16sdp</item>
    </style>

</resources>